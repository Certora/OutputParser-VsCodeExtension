{
	"name": "certora-output-parser",
	"displayName": "Certora output parser",
	"description": "Presents Certora verification results",
	"version": "0.1.2",
	"publisher": "Certora",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:data.json",
		"workspaceContains:*.spec"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "callTrace",
				"contents": "No call trace found. Make sure you've chosen a violated property"
			},
			{
				"view": "variables",
				"contents": "No variables were found. Make sure you've chosen a violated property"
			},
			{
				"view": "callResolutionWarnings",
				"contents": "No call resolution warnings were found"
			},
			{
				"view": "callResolution",
				"contents": "No call resolution was found"
			},
			{
				"view": "specOutline",
				"contents": "No property found. Make sure you have added a data.json file to your working directory, and press refresh."
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "detailed-information",
					"title": "Detailed Information",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"detailed-information": [
				{
					"id": "callTrace",
					"name": "Call Trace",
					"icon": "media/dep.svg",
					"when": "callTraceDefined",
					"contextualTitle": "Call Trace"
				},
				{
					"id": "variables",
					"name": "Variables",
					"icon": "media/dep.svg",
					"when": "propertyChosen",
					"contextualTitle": "Variables"
				},
				{
					"id": "callResolutionWarnings",
					"name": "Call Resolution Warnings",
					"icon": "media/dep.svg",
					"when": "propertyChosen",
					"contextualTitle": "Call Resolution Warnings"
				},
				{
					"id": "callResolution",
					"name": "Call Resolution",
					"icon": "media/dep.svg",
					"when": "propertyChosen",
					"contextualTitle": "Call Resolution"
				}
			],
			"explorer": [
				{
					"id": "specOutline",
					"name": "Spec Outline"
				},
				{
					"id": "availableContracts",
					"name": "Available Contracts"
				}
			]
		},
		"commands": [			
			{
				"command": "extension.showDetails",
				"title": "Show details"
			},
			{
				"command": "specOutline.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "specOutline.refresh",
					"group": "navigation",
					"when": "view == specOutline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.2.2"
	}
}
